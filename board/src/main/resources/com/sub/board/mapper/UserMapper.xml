<?xml version="1.0" encoding="UTP-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sub.board.mapper.UserMapper">

  <!-- User -->
  <resultMap type="Users" id="userMap">
    <id property="no" column="no" />

    <result property="no" column="no" />
    <result property="email" column="email" />
    <result property="password" column="password" />
    <result property="name" column="name" />

    <!-- 1:N User / UserAuth -->
    <collection property="authList" resultMap="authMap"> </collection>
  </resultMap>

  <!-- UserAuth -->
  <resultMap type="Users" id="authMap">
    <result property="email" column="email" />
    <result property="auth" column="auth" />
  </resultMap>

  <!-- user 등록 -->
  <insert id="insert" resultType="Users">
      INSERT INTO user(email, password, name)
      VALUES (#{email}, #{password}, #{name} )
  </insert>

  <!-- user 조회 -->
  <select id="select" resultType="Users">
    SELECT *
    FROM user
    WHERE no = #{no}
  </select>

  <!-- login user 조회 -->
  <select id="login" resultMap="userMap">
    SELECT u.no
          ,u.email
          ,u.password
          ,name
          ,auth
    FROM user u LEFT OUTER JOIN user_auth auth
                ON u.email = auth.email
    WHERE u.email = #{email}
  </select>

  <!-- user 권한 등록 -->
  <insert id="insertAuth">
      INSERT INTO user_auth(email, auth)
      VALUES (#{email}, #{auth})
  </insert>

  <!-- user 수정 -->
  <update id="update">
      UPDATE user 
        SET email = #{email}
            ,password = #{password}
            ,name = #{name}
      VALUES #{email}, #{password}, #{name}
      WHERE email = #{email}
  </update>

  <!-- user 삭제 -->
  <delete id="delete">
    DELETE FROM user
    WHERE email = #{email}
  </delete>
</mapper>
